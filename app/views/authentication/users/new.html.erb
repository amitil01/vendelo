<%= form_with model: @user do |form| %>

  <%= @user.errors.full_messages.each do |error| %>
    <div>
     <%= error %> 
    </div>
  <% end %>

  <div>
   <%= form.label :email %>
   <%= form.email_field :email, required: true %>
  </div>

  <div>
   <%= form.label :username %>
   <%= form.text_area :username, required: true %>  
  </div>

  <div>
   <%= form.label :password %>
   <%= form.password_field :password, required: true %>  
  </div>

  <p><%= form.submit %></p> 

<% end %>